<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTextTheme" parent="AppTheme">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginEnd">@dimen/toolbar_padding</item>
    </style>

    <style name="BookCardViewTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/lorem_ipsum_2p</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TxtBookCardView" parent="BookCardViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textColorPrimary">@color/white</item>-->
        <!--<item name="android:textColor">@color/white</item>-->
        <!--<item name="android:text">@string/lorem_ipsum_2p</item>-->
        <!--<item name="android:ellipsize">end</item>-->
        <!--<item name="android:singleLine">true</item>-->
        <item name="android:paddingStart">@dimen/bookItem_padding</item>
        <item name="android:paddingEnd">@dimen/bookItem_padding</item>
        <!--<item name="android:background">@color/bookItem_text_background</item>-->
    </style>

</resources>
